
@{
    ViewBag.Title = "Dashboard";
}

<div ng-controller="DashboardCtrl" class="container mt-3" style="max-width:100%;">

    <div class="row">
        <div class="col-6">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#home">Today</a>
